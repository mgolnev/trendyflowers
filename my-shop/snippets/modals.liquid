<script type="text/template" data-modal="mobile-sidebar">
<div class="sidebar">

  <div class="sidebar-block">
    <div class="sidebar-block-heading">
      {{ messages.label_catalog }}
    </div>

    <div class="sidebar-block-content">
      {% include "menu", source_type: 'collection', source_handle: 'all', menu_class: 'mobile-sidebar-menu', show_icon: false %}
    </div>
  </div>

  <div class="sidebar-block">
    <div class="sidebar-block-heading">
      {{ messages.label_main_menu }}
    </div>

    <div class="sidebar-block-content">
      {% include "menu", source_type: 'menu', source_handle: 'main-menu', menu_class: 'mobile-sidebar-menu' %}
    </div>
  </div>
</div>
</script>

<script type="text/template" data-modal="collection-filter">
