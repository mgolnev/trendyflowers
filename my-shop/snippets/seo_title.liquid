
{% if template contains 'product' %}
  {% if title == product.title %}
    {% assign main_title = product.title  | append:  messages.title_product  %}
  {% endif %}

{% elsif template contains 'collection' %}
  {% if title == collection.title %}
    {% assign  main_title =  collection.title  | append:  messages.title_collection   %}
  {% endif %}

{% elsif template contains 'cart' %}
      {% assign main_title = messages.cart_title  %}

{% elsif template contains 'search' %}
      {% assign main_title = messages.search_title  %}

{% elsif template contains 'compare' %}
    {% assign main_title = messages.comparison_title  %}

{% elsif template contains  'index' %}
  {% if title != index.title %}
    {% assign main_title = index.title %}
  {% endif %}

{% elsif template contains  'blog' %}
  {% if title != '' %}
    {% assign main_title = title  %}
  {% else %}
    {% assign main_title = blog.title  %}
  {% endif %}

{% elsif template contains  'article' %}
  {% if title != '' %}
    {% assign main_title = title  %}
  {% else %}
    {% assign main_title = article.title  %}
  {% endif %}

{% elsif template contains  'page' %}
  {% if title != '' %}
    {% assign main_title = title  %}
  {% else %}
    {% assign main_title = page.title  %}
  {% endif %}

{% else %}
<title>
  {% yield 'title' %}
</title>
{% endif %}

  <title>
    {% unless current_page == null  %}
      {% assign count_page =  messages.title_page  | append: current_page %}
    {% endunless %}
    {% if main_title == null %}
        {{ title }}{{ count_page }}
    {% else %}
        {{ main_title }}{{ count_page }}
    {% endif %}
  </title>

{% assign count_page = null %}
{% assign  main_title = null %}
{% assign page_title= null %}
