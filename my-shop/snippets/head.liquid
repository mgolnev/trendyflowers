{% assign page_title = '' %}

{% case template %}

  {% when 'cart' %}
    {% assign page_title = messages.cart_title %}

  {% when 'search' %}
    {% assign page_title = messages.search_title %}

  {% when 'compare' %}
    {% assign page_title = messages.comparison_title %}

{% endcase %}

<title>
  {% if page_title != '' %}
    {{ page_title }}
  {% else %}
    {{ title }}
    {% if current_page %} | Страница {{current_page}}{% endif %}
  {% endif %}
</title>

{% assign page_title = '' %}

<!-- meta -->
<meta charset="UTF-8" />
<meta name="keywords" content='{{ keywords }}'/>
<meta name="description" content='{{ description }}'/>
<meta name="robots" content="index,follow" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE" />

{% if template == 'collection' %}
  <meta name="handle" content='{{ collection.handle }}'/>
{% endif %}

<!-- rss feed-->
<link rel="alternate" type="application/rss+xml" title="Блог" href="/blogs/blog.atom" />

{% case template %}

  {% when 'product' %}

    <meta property="og:title" content="{{ product.title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ account.url }}{{ product.url }}" />

    {% if product.first_image.thumb_url contains 'http' %}
      <meta property="og:image" content="{{ product.first_image.compact_url }}" />
    {% else %}
      <meta property="og:image" content="{{ account.url }}{{ product.first_image.compact_url }}" />
    {% endif %}

  {% when 'index' %}

    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ account.url }}" />
    <meta property="og:title" content="{{ account.title }}" />

    {% if settings.logotype_type == 'image' %}
      <meta property="og:image" content="{{ 'logotype.jpg' | asset_url }}" />
    {% endif %}

  {% when 'article' %}

    <meta property="og:title" content="{{ article.title }}" />
    <meta property="og:image" content="{{ article.image.compact_url }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ article.url }}" />

{% endcase %}

<!-- icons-->
<link rel="icon" type="image/png" sizes="16x16" href="{{ 'favicon.png' | asset_url }}" />

<!-- fixes -->
<script src="{{ 'modernizr-custom.js' | asset_url }}"></script>
