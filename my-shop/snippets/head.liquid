<!-- meta -->
<meta charset="UTF-8" />

{% include "seo_descrition" %}

<meta name="robots" content="index,follow" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE" />

{% include "head_menu" %}

<!-- canonical url-->
{% if template contains "collection" %}

  {% if filter %}
    {% assign canon =  filter.handle %}
  {% endif %}
  <link rel="canonical" href="{{ account.url }}{{ collection.url }}/{{ canon }}"/>
{% elsif template contains "product" %}
  <link rel="canonical" href="{{ account.url }}{{ product.canonical_url }}"/>
{% endif %}

<!-- rss feed-->
{% if template == "blog" %}
  <link rel="alternate" type="application/rss+xml" title="{{ blog.title }}" href="{{ account.url }}{{ blog.url }}.atom" />
{% endif %}

{% include "op_graph" %}

<!-- icons-->
<link rel="icon" type="image/png" sizes="16x16" href="{{ "favicon.png" | asset_url_if_exists }}" />
<link rel="stylesheet" type="text/css"  href="{{ "jquery.fancybox.min.css" | asset_url }}" />
{% assign canon =  null %}
